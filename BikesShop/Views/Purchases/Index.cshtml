@model IEnumerable<BikesShop.Models.PurchaseViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bicycle.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bicycle.ModelYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bicycle.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bicycle.Price)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Bicycle.Type.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bicycle.ModelYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bicycle.Color.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bicycle.Price)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
